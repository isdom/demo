<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <Button
        android:id="@+id/btnCoin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:text="@string/btn_coin" />

    <Button
        android:id="@+id/btnPass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnCoin"
        android:layout_below="@+id/btnCoin"
        android:layout_marginTop="31dp"
        android:text="@string/btn_pass" />

    <TextView
        android:id="@+id/textState"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnCoin"
        android:layout_marginLeft="64dp"
        android:layout_toRightOf="@+id/btnCoin"
        android:height="64dp"
        android:textColor="@android:color/holo_green_light"
        android:textSize="@dimen/activity_horizontal_margin"
        android:width="100dp" />

    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnCoin"
        android:layout_alignBottom="@+id/btnCoin"
        android:layout_alignLeft="@+id/textState"
        android:text="@string/current_state"
        android:textAppearance="?android:attr/textAppearanceSmall" />

</RelativeLayout>